.container-fluid
  .row
    .col-sm-12.text-center
      h1 Se connecter

  .row.mtl
    .col-sm-6.col-sm-offset-3
      form(name='loginForm', novalidate)
        .form-group(ng-class='{ "has-error": loginForm.email.$dirty && loginForm.email.$invalid }')
          label.control-label(for='email') Email
          input#email.form-control(name='email', ng-model='login.email', ng-required='true', type='email')

        .form-group(ng-class='{ "has-error": loginForm.password.$dirty && loginForm.password.$invalid }')
          label.control-label(for='password') Mot de passe
          input#password.form-control(name='password', ng-model='login.password', ng-required='true', type='password')

        .form-group(ng-if='captcha')
          div(ng-model='login.captcha', re-captcha)

      .row
        .col-sm-6.col-sm-offset-3
          button.btn.btn-success.btn-block.btn-lg(ng-click='send(loginForm)', ng-disabled='loginForm.$invalid') Connexion

        .col-sm-3.text-right
          a.btn.btn-success.btn-lg(ui-sref='signup') Inscription
